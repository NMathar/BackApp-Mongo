{
  "name": "BackApp-Mongo",
  "version": "1.0.0",
  "description": "Backup your MongoDB Databases",
  "author": "NMathar",
  "private": true,
  "scripts": {
    "dev": "nuxt dev",
    "cron:start": "touch server/logs/cron.lock && forever start server/cron.js",
    "cron:stop": "rm -f server/logs/cron.lock && forever stop server/cron.js",
    "cron:status": "test -f server/logs/cron.lock && printf running || printf stopped",
    "build": "nuxt build",
    "start": "nuxt",
    "generate": "nuxt generate"
  },
  "dependencies": {
    "ale-mongoutils": "^1.0.2",
    "bootstrap": "^4.1.3",
    "bootstrap-vue": "^2.0.0-rc.11",
    "cross-env": "^5.2.1",
    "express": "^4.17.1",
    "forever": "^1.0.0",
    "lowdb": "^1.0.0",
    "node-cron": "^2.0.3",
    "nodemailer": "^6.3.0",
    "nuxt": "^2.9.2",
    "pm2": "^3.5.1"
  },
  "devDependencies": {
    "nodemon": "^1.19.2"
  }
}
